<!DOCTYPE html/>
@model IEnumerable<Programmania.ViewModels.UserCourseVM>;
@using Programmania.HtmlHelpers

<html>
<head>
    <title>Courses</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/HamburgerMenu.css" />
    <link rel="stylesheet" href="~/css/Courses.css" />
    <link rel="stylesheet" href="~/css/Footer.css" />

    <link rel="stylesheet" href="~/css/loading-bar.min.css" />
    <script src="~/js/loading-bar.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>

<body>
    <div class="wrapper">
        <header class="header">
        <div class="header-container">
            <div class="container__text">Programmania</div>
            <div class="header__burger">
                <span></span>
            </div>
            <div class="container-menu">
                <nav class="header__menu">
                    <ul class="header__list">
                        <li>
                            <a href="Main" class="header__link">Main</a>
                        </li>

                        <li>
                            <a href="Courses" class="header__link">Courses</a>
                        </li>

                        <li>
                            <a href="Performance" class="header__link">Performance</a>
                        </li>

                        <li>
                            <a href="Challenges" class="header__link">Challenges</a>
                        </li>

                        <li>
                            <a href="Profile" class="header__link">Profile</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="header-text">
            <h3>Courses</h3>
        </div>

        <div class="content">
            <div class="courses" data-aos="fade-left" data-aos-duration="1500">
                @if (Model != null)
                {
                    @foreach (Programmania.ViewModels.UserCourseVM course in Model)
                    {
                        @Html.CreateCourse(course);
                    }
                }
            </div>
        </div>
    </main>

    <footer class="footer">

    </footer>
    </div>
    

    <script type="text/javascript" src="~/js/util/burger.js"></script>
    <script type="text/javascript" src="~/js/util/imageAnylizer.js"></script>
    <script type="text/javascript" src="~/js/courses.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html> 